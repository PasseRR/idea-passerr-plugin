<idea-plugin>
    <actions>
        <!-- 数据库设计文档导出 -->
        <action id="com.github.passerr.idea.plugins.database.doc.ExportDatabaseDocAction"
                class="com.github.passerr.idea.plugins.database.doc.ExportDatabaseDocAction"
                text="Export Database As Doc"
                description="Export Database Document As Doc">
            <add-to-group group-id="DatabaseViewPopupMenu" anchor="before"
                          relative-to-action="Console.TableResult.ShowDumpDialogAction"/>
        </action>

        <!-- 代码生成 -->
        <action id="com.github.passerr.idea.plugins.database.generator.action.CodeGenerateAction"
                class="com.github.passerr.idea.plugins.database.generator.action.CodeGenerateAction"
                text="Mybatis(Plus) Code Generate"
                description="Mybatis/Plus Code Generate">
            <add-to-group group-id="DatabaseViewPopupMenu" anchor="before"
                          relative-to-action="Console.TableResult.ShowDumpDialogAction"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <!-- 代码生成配置状态 -->
        <applicationService
                serviceImplementation="com.github.passerr.idea.plugins.database.generator.config.GeneratorStateComponent"/>
        <!-- 代码生成配置界面 -->
        <applicationConfigurable
                instance="com.github.passerr.idea.plugins.database.generator.config.GeneratorConfigurable"/>
    </extensions>
</idea-plugin>